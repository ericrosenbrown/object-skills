<?xml version="1.0"?>
<robot name="real_microwave">
  <link name="base_link">
  </link>

  <link name="door">
    <visual>
      <geometry>
        <box size="0.368 0.025 0.24"/>
      </geometry>
      <origin rpy="0 0 0" xyz="-0.184 0 0"/>
    </visual>
  </link>

  
  <link name="handle">
    <visual>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>
  </link>

  <joint name="base_to_door" type="revolute">
    <axis xyz="0 0 1" />
    <limit effort="1000.0" lower ="0" upper ="1.58" velocity="0.5" />
    <parent link="base_link"/>
    <child link="door"/>
    <origin xyz="0 0 0"/>
  </joint>

  <joint name="door_to_handle" type="fixed">
    <parent link="door"/>
    <child link="handle"/>
    <origin xyz = "-0.355 .025 0"/>
  </joint>

</robot>
